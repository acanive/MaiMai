<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sell_bg"
    android:paddingBottom="20dp" >

    <RelativeLayout
        android:id="@+id/rel_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/light_gray"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_brown"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/rel_msg"
        android:background="@color/brownish_yellow" >

        <ImageView
            android:id="@+id/sell_image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/user_photo"
            android:contentDescription="@string/app_name" />

        <HorizontalScrollView
            android:id="@+id/horzz"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sell_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/sell_image"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/name_text1"
                android:textSize="16sp" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/msg"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/horzz"
            android:layout_marginRight="10dp"
            android:background="@drawable/chat_new"
            android:padding="5dp" />

        <CheckBox
            android:id="@+id/follow_toggle"
           android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignTop="@id/horzz"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/msg"
            android:button="@drawable/follow_check_box_new" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sell_image"
            android:layout_alignBottom="@id/sell_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hour_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sell_image"
            android:layout_alignBottom="@id/sell_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/sell_image"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>


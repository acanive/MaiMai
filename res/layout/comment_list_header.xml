        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/hsv"
        android:background="@color/light_brown"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/itemname_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/amount"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/itemname_image"
        android:layout_below="@id/lin1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/light_brown"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_desc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemname_image"
        android:layout_below="@id/itemname_image"
        android:layout_marginTop="20dp"
        android:background="@drawable/info1"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_desc_image"
        android:layout_below="@id/itemname_image"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="15dp"
        android:paddingTop="1dp"
        android:textColor="@android:color/black"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/change_bg"
                    android:contentDescription="@string/app_name"
                    android:padding="15dp"
                    android:src="@drawable/save"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/change_bg"
                    android:contentDescription="@string/app_name"
                    android:padding="15dp"
                    android:src="@drawable/edit" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/itemname_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/amount"
                android:contentDescription="@string/app_name"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/itemname_image"
                android:layout_below="@id/lin1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/light_brown"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/itemname_image"
                android:layout_below="@id/lin1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/light_brown"
                android:textColorHint="@color/light_brown"
                android:textSize="16sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_desc_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/itemname_image"
                android:layout_below="@id/itemname_image"
                android:layout_marginTop="30dp"
                android:background="@drawable/info1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_desc_image"
                android:layout_below="@id/itemname_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/item_desc_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@id/item_desc_image"
                android:layout_below="@id/itemname_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_price_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/itemname_image"
                android:layout_below="@id/item_desc"
                android:layout_marginTop="15dp"
                android:background="@drawable/amount1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_price_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:text="$"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_price_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/item_price_edit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@id/item_price_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_location_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/itemname_image"
                android:layout_below="@id/item_price_image"
                android:layout_marginTop="15dp"
                android:background="@drawable/location1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_location_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/item_location_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/me_spinner"
                android:visibility="invisible" />

            <AutoCompleteTextView
                android:id="@+id/country_auto"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/item_location_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_like_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/itemname_image"
                android:layout_below="@id/item_location"
                android:layout_marginTop="15dp"
                android:background="@drawable/likes"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_like_image"
                android:layout_marginLeft="50dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/item_viewed_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_location"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/item_like"
                android:background="@drawable/view1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/item_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_like"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_viewed_image"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/item_report_abuse_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/itemname_image"
                android:layout_below="@id/item_like_image"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/item_views"
                android:background="@drawable/alert1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/item_report_abuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_report_abuse_image"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:text="@string/report_abuse"
                android:textColor="@color/report_abuse_text"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/item_report_abuse"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_brown"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>